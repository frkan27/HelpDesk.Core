@model HelpDesk.Model.ViewModels.FaultViewModels.FaultViewModels
@using HelpDesk.Model.Enums.FaultEnums
@using HelpDesk.BLL
@inject MembershipTools membership

@{
    ViewData["Title"] = "OpeFaultDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section top{
    <link href="~/assets/css/lightbox.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/js/plugins/slick/slick.min.css" />
    <link rel="stylesheet" href="~/assets/js/plugins/slick/slick-theme.min.css" />
}
<h2 class="text-center">Teknisyen Atama Ariza Detay</h2>
<div class="col-md-12">
    <div class="card">
        <div class="card-block tab-content">
            <div class="tab-pane fade active in" id="profile-tab1">
               
                    <form asp-controller="Operator" asp-action="TechnicianAssign" method="post" class="fieldset">
                       
                       @*var data = membership.GetUserWithId(Model.CustomerID)*@
                        @Html.HiddenFor(x => x.FaultId)

                        <h4 class="m-t-sm m-b">Teknisyen Atama Sayfası</h4>
                        <br />

                        <div class="form-group row">
                            <div class="col-md-12">
                                <br />
                                @if (Model.FaultCondition != FaultCondition.TechnicianAppointed)
                                {
                                    @*@Html.Label("Teknisyen Seçiniz", new { @class = "col-md-3 control-label" })*@
                                    <label for="">Choose Technician</label>
                                    <div class="col-md-6">
                                        @*TODO buradaki x.UserId sayafaya gelen modelde olmalı. ona göre anlıyor. ve tipi de geldigi gibi olmalı. string geliyorsa string int ise int*@
                                        @*@Html.DropDownListFor(x => x.UserId, (List<SelectListItem>)ViewBag.TeknisyenK, new { @class = "form-control", size = "1" })*@
                                    </div>
                                    <div class="row narrow-gutter">
                                        <div class="col-md-12">
                                            @*Butonlar yapılcak*@
                                            <button class="btn btn-app-purple btn-block" type="submit">Teknisyen Ata</button>
                                        </div>
                                    </div>
                                }
                                else
                                { <div class="row narrow-gutter">
                                        <div class="col-md-12">
                                            <span class="icon-alert"> Bu Kayda Teknisyen Atandı. Detayları Görebilirsiniz. </span>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-xs-6">
                                <label for="Name">Müşterinin Adı</label>
                                <input type="text" for="data.Name" class="form-control" placeholder="İsim giriniz" />
                            </div>
                            <div class="col-xs-6">
                                <label for="Surname">Müşterinin Soyadı</label>
                                <input type="text" for="Surname" class="form-control" placeholder="Soyisim giriniz" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-6">
                                <label for="Email">Müşterinin Maili</label>
                                <input type="text" for="Email" class="form-control" placeholder="Mail giriniz" />
                            </div>
                            <div class="col-xs-6">
                                <label asp-for="PhoneNumber">Telefon</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Telefon numarası giriniz" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Adress">Arıza Açıklaması</label>
                            <input type="text" asp-for="Adress" class="form-control" placeholder="Adres bilgisi giriniz" />
                        </div>

                        <div class="form-group row">
                            <div class="col-xs-6">

                                <label asp-for="PostedFileFault">Arıza Resmi</label>
                                <input type="file" asp-for="PostedFileFault" class="form-control" multiple="true" placeholder="ADRESSSs" />
                            </div>
                        </div>
                        <div class="col-xs-6">

                            <label asp-for="PostedFileFatura">Arıza Resmi</label>
                            <input type="file" asp-for="PostedFileFatura" class="form-control" placeholder="ADRESSSs" />
                        </div>



                        </form>
                     
                </div>
            <!-- End profile tab 1 -->
        </div>
        <!-- .card-block .tab-content -->
    </div>
    <!-- .card -->
</div>

@section bottom
    {
    <script src="~/assets/js/plugins/select2/select2.full.min.js"></script>
    <script src="~/assets/js/lightbox-plus-jquery.min.js"></script>
    <script src="~/assets/js/lightbox.js"></script>
    <script>$(function () {
            App.initHelpers(['select2']);

        });</script>
}


